#include <stdio.h>

int main() {
    int totalDays, i, worked, count = 0;

    printf("Enter total number of days in the month: ");
    scanf("%d", &totalDays);

    for (i = 1; i <= totalDays; i++) {
        printf("Day %d (1 = Worked, 0 = Not Worked): ", i);
        scanf("%d", &worked);

        if (worked == 1) {
            count++;
        }
    }

    printf("Total number of days worked in the month = %d\n", count);

    return 0;
}
