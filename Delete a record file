#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp, *temp;
    char line[100], del[20];

    fp = fopen("records.txt", "r");
    temp = fopen("temp.txt", "w");

    printf("Enter record to delete: ");
    scanf("%s", del);

    while (fgets(line, sizeof(line), fp)) {
        if (!strstr(line, del)) {
            fputs(line, temp);
        }
    }

    fclose(fp);
    fclose(temp);

    remove("records.txt");
    rename("temp.txt", "records.txt");

    printf("Record deleted successfully");
    return 0;
}
